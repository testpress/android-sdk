<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/product_item_layout"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp" >

    <in.testpress.course.util.RoundedImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="120dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:text="IAS Prelims Power Pack"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/testpress_black"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:gravity="top"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:text="2000.00"
            android:layout_marginLeft="0dp"
            android:textColor="@color/testpress_black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/counts" >

            <TextView
                android:id="@+id/total_chapters"
                android:text="0 Chapters"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_content"
                android:drawablePadding="5dp"
                android:textColor="#667c8a"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/total_contents"
                android:text="0 Contents"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_chapter"
                android:drawablePadding="5dp"
                android:textColor="#667c8a" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
