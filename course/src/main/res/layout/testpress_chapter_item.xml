<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/testpress_gray_light"
        />

    <LinearLayout android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <ImageView android:id="@+id/chapter_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitXY"
            android:layout_marginRight="12dp"
            />

        <ImageView android:id="@+id/exp_list_indicator"
            android:visibility="gone"
            android:src="@drawable/testpress_arrow_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/lblListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:textSize="14sp"
            android:lineSpacingExtra="7sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            />

    </LinearLayout>

</LinearLayout>
