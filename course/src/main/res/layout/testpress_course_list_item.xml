<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/course_card_size"
                android:layout_height="@dimen/course_card_size"
                android:layout_marginRight="@dimen/course_card_margin_from_title"
                app:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/course_card_corner_radius"
                card_view:cardElevation="@dimen/course_card_elevation"
                card_view:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/thumbnail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/sym_def_app_icon" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="2"
                    android:text="Title goes here"
                    android:textColor="@color/testpress_black"
                    android:textSize="16sp" />

                <in.testpress.ui.view.ReadMoreTextView
                    android:id="@+id/course_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="7sp"
                    android:textColor="@color/testpress_text_gray_dark"
                    android:textSize="13sp"
                    app:showTrimExpandedText="false"
                    app:trimLength="65"
                    app:trimMode="trimModeLength" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_border_box"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/course_content_detail_height">

                <!--Chapter design start-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/first_content_detail_distance_from_left"
                    android:src="@drawable/testpress_chapter_outline" />

                <TextView
                    android:id="@+id/total_chapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/distance_between_content_detail_icon_and_content_count_value"
                    android:text="0"
                    android:theme="@style/courseDetailText" />

                <TextView
                    android:id="@+id/chapter_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/distance_between_content_count_value_and_content_detail_name"
                    android:text="Chapters"
                    android:theme="@style/courseDetailText" />
                <!--Chapter design end-->

                <!--Content design start-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_between_two_content_detail"
                    android:src="@drawable/testpress_content_outline" />

                <TextView
                    android:id="@+id/total_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/distance_between_content_detail_icon_and_content_count_value"
                    android:text="0"
                    android:theme="@style/courseDetailText" />

                <TextView
                    android:id="@+id/content_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/distance_between_content_count_value_and_content_detail_name"
                    android:text="Courses"
                    android:theme="@style/courseDetailText" />
                <!--Content design end-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:indeterminate="false"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:progress="50"
                android:progressDrawable="@drawable/testpress_green_progress" />

            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="50%"
                android:textColor="@color/testpress_text_gray_light"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>