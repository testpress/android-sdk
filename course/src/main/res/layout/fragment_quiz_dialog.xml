<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/quiz_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question text will load here..."
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/quiz_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/quiz_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Feedback"
            android:visibility="gone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/quiz_check_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:text="Check" />

        <Button
            android:id="@+id/quiz_continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:text="Continue"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>


