<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.testpress.samples">

    <application
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name=".MainActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".core.TestpressCoreSampleActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="Testpress Core Example" />

        <activity android:name=".exam.ExamSampleActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/open_exams_in" />

        <activity android:name=".exam.NavigationDrawerActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/example_fragment_in_drawer" />

        <activity android:name=".course.CourseSampleActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/open_exams_in" />

        <activity android:name=".course.NavigationDrawerActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/example_fragment_in_drawer" />

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

    </application>

</manifest>