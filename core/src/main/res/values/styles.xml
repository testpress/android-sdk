<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UnusedResources">

    <!-- Base application theme. -->
    <style name="TestpressTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/testpress_actionbar_background</item>
        <item name="colorAccent">@color/testpress_color_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/testpress_actionbar_text</item>
        <item name="android:textColorPrimary">@color/testpress_actionbar_text</item>
        <item name="colorButtonNormal">@color/testpress_color_primary</item>
        <item name="android:statusBarColor">@color/testpress_color_primary</item>
    </style>

    <style name="TestpressTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TestpressAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#08AE9E</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Widget.Testpress.HeaderBar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TestpressCardViewNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="TestpressButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_xmedium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/testpress_button_text_color</item>
    </style>

    <style name="TestpressSmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/testpress_button_text_color</item>
    </style>

    <style name="TestpressTextInputLayoutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <!--Bar Color in False State-->
        <item name="colorControlNormal">#c5c5c5</item>
        <!--Label color And Bar Color in True State-->
        <item name="colorControlActivated">@color/testpress_color_primary</item>
        <item name="colorControlHighlight">@color/testpress_color_primary</item>
    </style>

    <style name="TestpressEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

</resources>