<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view" >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/exam_details"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TestpressExamDetailHeading"
                android:layout_width="match_parent"
                android:text="Aptitude Analytical Maths (NBE Template)"
                android:gravity="center_horizontal"
                android:textSize="26sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/exam_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="250dp"
                        android:layout_height="250dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#dddddd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <LinearLayout style="@style/TestpressExamDetailRow"
                        android:layout_marginBottom="5dp">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_rank" />
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/rank"
                            android:text="1"/>
                    </LinearLayout>
                    <LinearLayout style="@style/TestpressExamDetailRow"
                        android:layout_marginBottom="5dp">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_score" />
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/score"
                            android:text="1"/>
                    </LinearLayout>
                    <LinearLayout style="@style/TestpressExamDetailRow"
                        android:layout_marginBottom="5dp">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_total_correct"/>
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/total_correct"
                            android:text="100"/>
                    </LinearLayout>
                    <LinearLayout style="@style/TestpressExamDetailRow"
                        android:layout_marginBottom="5dp">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_total_incorrect" />
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/total_incorrect"
                            android:text="0:30:00"/>
                    </LinearLayout>
                    <LinearLayout style="@style/TestpressExamDetailRow"
                        android:layout_marginBottom="5dp">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_total_unanswered" />
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/total_unanswered"
                            android:text="1"/>
                    </LinearLayout>
                    <LinearLayout style="@style/TestpressExamDetailRow">
                        <TextView
                            style="@style/TestpressExamDetailSubHeading"
                            android:text="@string/testpress_time_taken" />
                        <TextView
                            style="@style/TestpressExamDetailValue"
                            android:layout_width="70dp"
                            android:id="@+id/time_taken"
                            android:text="0:28:05"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#555"
                                android:textSize="@dimen/testpress_text_size_xlarge"
                                android:textStyle="normal"
                                android:text="@string/testpress_your_percentile_is" />

                            <TextView
                                style="@style/TestpressExamDetailValue"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/testpress_text_size_xlarge"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:id="@+id/percentile"
                                android:text="22%"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#555"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:text="\u2014" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#555"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:id="@+id/sub_percentile"
                                android:text="22%" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#555"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:text="of users scored less than your score of " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#555"
                                android:textSize="13sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:id="@+id/sub_score"
                                android:text="20" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:paddingRight="10dp"
                android:id="@+id/email_pdf_container" >

                <Button
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="@string/testpress_email_pdf"
                    android:id="@+id/email_pdf"
                    android:textColor="@color/testpress_white"
                    android:drawableLeft="@drawable/ic_email_white_18dp"
                    android:drawableStart="@drawable/ic_email_white_18dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/testpress_primary_button"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:drawablePadding="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#dddddd" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
