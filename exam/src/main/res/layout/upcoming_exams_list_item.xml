<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <LinearLayout
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/testpress_black"
                android:layout_height="36dp"
                android:gravity="bottom"
                android:textSize="@dimen/testpress_text_size_large"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/testpress_margin_normal"
                android:id="@+id/exam_title" />

            <TextView
                android:id="@+id/exam_date"
                android:textColor="@color/testpress_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testpress_text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/testpress_margin_normal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="bottom"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/testpress_text_size_large"
                    android:textStyle="bold"
                    android:id="@+id/number_of_questions"
                    android:textColor="@color/testpress_black"
                    android:layout_gravity="end" />

                <TextView
                    android:id="@+id/questions_text"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/testpress_margin_normal"
                    android:layout_marginStart="@dimen/testpress_margin_normal"
                    android:text="@string/testpress_questions"
                    android:layout_height="34dp"
                    android:textSize="@dimen/testpress_text_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/testpress_black"
                    android:gravity="bottom" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exam_duration"
                android:textSize="@dimen/testpress_text_size_large"
                android:textColor="@color/testpress_black"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="#c0c0c0"/>

</LinearLayout>