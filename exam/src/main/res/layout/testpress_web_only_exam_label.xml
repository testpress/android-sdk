<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/web_only_label"
    android:background="@drawable/testpress_stroke_background_gray"
    android:padding="7dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="7dp"
        android:tint="@color/testpress_text_gray"
        android:src="@drawable/testpress_desktop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/testpress_text_gray"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/testpress_text_size_small"
        android:text="@string/testpress_web_only_exam" />

</LinearLayout>