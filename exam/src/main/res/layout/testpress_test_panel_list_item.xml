<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/panel_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/all_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/question_index_all"
            android:minWidth="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#808080"
            android:typeface="normal"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            style="@style/TestpressText.PanelListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_all"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/question_index_all"
            android:layout_toEndOf="@+id/question_index_all"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/marked_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/question_index_marked"
            android:minWidth="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#d9534f"
            android:typeface="normal"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            style="@style/TestpressText.PanelListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_marked"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/question_index_marked"
            android:layout_toEndOf="@+id/question_index_marked"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/answered_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/question_index_answered"
            android:minWidth="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#08AE9E"
            android:typeface="normal"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            style="@style/TestpressText.PanelListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_answered"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/question_index_answered"
            android:layout_toEndOf="@+id/question_index_answered"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </RelativeLayout>

</LinearLayout>