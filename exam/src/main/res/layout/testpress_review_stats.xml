<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/exam_details"
            android:layout_marginTop="5dp" >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    style="@style/TestpressExamDetailHeading"
                    android:layout_width="wrap_content"
                    android:text="Aptitude Analytical Maths (NBE Template)"
                    android:id="@+id/exam_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">
                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout
                style="@style/TestpressExamDetailRow"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/email_pdf_container" >

                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="" />

                <Button
                    android:layout_height="30dp"
                    android:layout_width="wrap_content"
                    android:text="@string/testpress_email_pdf"
                    android:id="@+id/email_pdf"
                    android:textColor="@color/testpress_white"
                    android:drawableLeft="@drawable/ic_email_white_18dp"
                    android:drawableStart="@drawable/ic_email_white_18dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/testpress_primary_button"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:drawablePadding="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">
                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_rank" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/rank"
                    android:text="1"/>
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_score" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/score"
                    android:text="1"/>
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_total_correct"/>
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/total_correct"
                    android:text="100"/>
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_total_incorrect" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/total_incorrect"
                    android:text="0:30:00"/>
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_total_unanswered" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/total_unanswered"
                    android:text="1"/>
            </LinearLayout>

            <LinearLayout style="@style/TestpressExamDetailRow">
                <TextView
                    style="@style/TestpressExamDetailSubHeading"
                    android:text="@string/testpress_time_taken" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:id="@+id/time_taken"
                    android:text="0:28:05"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">
                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:background="#cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/testpress_text_size_xlarge"
                    android:textStyle="normal"
                    android:text="@string/testpress_your_percentile_is" />
                <TextView
                    style="@style/TestpressExamDetailValue"
                    android:textSize="@dimen/testpress_text_size_xlarge"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/percentile"
                    android:text="22%" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/testpress_text_size_small"
                    android:textStyle="normal"
                    android:text="\u2014" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/testpress_text_size_small"
                    android:textStyle="normal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/sub_percentile"
                    android:text="22%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/testpress_text_size_small"
                    android:textStyle="normal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="of users scored less than your score of " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/testpress_text_size_small"
                    android:textStyle="normal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/sub_score"
                    android:text="20" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
