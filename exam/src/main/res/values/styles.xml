<resources>

    <!-- Base application theme. -->
    <style name="TestpressAppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/testpress_actionbar_background</item>
        <item name="colorAccent">@color/testpress_color_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/testpress_actionbar_text</item>
        <item name="android:textColorPrimary">@color/testpress_actionbar_text</item>
        <item name="colorButtonNormal">@color/testpress_color_primary</item>
    </style>

    <style name="TestpressAppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TestpressTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TestpressTabTextAppearance</item>
    </style>

    <style name="TestpressTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_small</item>
    </style>

    <style name="TestpressAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#08AE9E</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TestpressExamInfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TestpressExamInfoSubHeading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressExamInfoValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressTabExamInfoSubHeading">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressTabExamInfoValue">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressReviewStatRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TestpressReviewStatHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_color_primary</item>
        <item name="android:textSize">@dimen/testpress_text_size_xxlarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatSubHeading">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_color_primary</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatSubHeading.Tab">
        <item name="android:layout_width">220dp</item>
        <item name="android:textSize">@dimen/testpress_text_size_xlarge</item>
    </style>

    <style name="TestpressReviewStatValue">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatValue.Tab">
        <item name="android:textSize">@dimen/testpress_text_size_xlarge</item>
    </style>

    <style name="Widget.Testpress.HeaderBar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TestpressCardViewNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="TestpressButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_xmedium</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/testpress_white</item>
    </style>

    <style name="TestpressSmallButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/testpress_button_text_color</item>
    </style>

    <style name="TestpressAppThemeDark.NoToolBar">
        <item name="colorControlNormal">#808080</item>
    </style>

</resources>
