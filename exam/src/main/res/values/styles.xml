<resources>

    <style name="TestpressTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TestpressTabTextAppearance</item>
    </style>

    <style name="TestpressTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_small</item>
    </style>

    <style name="TestpressExamInfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TestpressExamInfoSubHeading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressExamInfoValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressTabExamInfoSubHeading">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressTabExamInfoValue">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressReviewStatRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TestpressReviewStatHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_color_primary</item>
        <item name="android:textSize">@dimen/testpress_text_size_xxlarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatSubHeading">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_color_primary</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatSubHeading.Tab">
        <item name="android:layout_width">220dp</item>
        <item name="android:textSize">@dimen/testpress_text_size_xlarge</item>
    </style>

    <style name="TestpressReviewStatValue">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TestpressReviewStatValue.Tab">
        <item name="android:textSize">@dimen/testpress_text_size_xlarge</item>
    </style>

    <style name="TestpressTheme.NoToolBar">
        <item name="colorControlNormal">#808080</item>
    </style>

    <style name="TestpressText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColor">@color/testpress_black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TestpressText.PanelListItem">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
