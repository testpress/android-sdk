<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TestpressTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TestpressTabTextAppearance</item>
    </style>

    <style name="TestpressTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_small</item>
    </style>

    <style name="TestpressExamInfoRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TestpressExamInfoSubHeading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressExamInfoValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/testpress_text_size_medium</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TestpressExamInfoSubHeading.Tab">
        <item name="android:layout_width">220dp</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
    </style>

    <style name="TestpressExamInfoValue.Tab">
        <item name="android:layout_width">110dp</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
    </style>

    <style name="TestpressReviewStatTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>

    <style name="TestpressCircleBorderImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TestpressReviewStatValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testpress_black</item>
        <item name="android:textSize">@dimen/testpress_text_size_large</item>
    </style>

    <style name="TestpressReviewStatLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="android:textColor">@color/testpress_text_gray_medium</item>
        <item name="android:textSize">@dimen/testpress_text_size_small</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TestpressReviewStatValue.Tab">
        <item name="android:textSize">@dimen/testpress_text_size_xlarge</item>
    </style>

    <style name="TestpressTheme.NoToolBar">
        <item name="colorControlNormal">#808080</item>
    </style>

    <style name="TestpressText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:textColor">@color/testpress_black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TestpressText.PanelListItem">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TestpressListItemHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/testpress_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TestpressListItemValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/testpress_text_gray_medium</item>
    </style>

    <style name="TestpressIndividualSubjectAnswersCountLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TestpressIndividualSubjectAnswersCountValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
