<resources>

    <!-- Base application theme. -->
    <style name="TestpressAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/testpress_color_primary</item>
        <item name="colorPrimaryDark">@color/testpress_color_primary_dark</item>
        <item name="colorAccent">@color/testpress_color_primary</item>
    </style>

    <style name="TestpressTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TestpressTabTextAppearance</item>
    </style>

    <style name="TestpressTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/testpress_text_size_small</item>
    </style>

</resources>
