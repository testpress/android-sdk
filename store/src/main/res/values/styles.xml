<resources>

    <style name="TestpressStoreEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/testpress_table_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <color name="testpress_black_light">#50000000</color>

    <style name="testpress_category_font_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TestpressAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#08AE9E</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
