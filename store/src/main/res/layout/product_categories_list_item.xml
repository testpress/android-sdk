<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/category"
        style="@style/Widget.MaterialComponents.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:text="@string/testpress_product_categories"
        android:textAppearance="@style/testpress_category_font_style"
        android:textColor="@drawable/testpress_category_chip_text_colour"
        app:checkedIconVisible="false"
        app:chipBackgroundColor="@drawable/testpress_category_chip_background"
        app:chipStrokeColor="@drawable/testpress_category_chip_stock_colour"
        app:chipStrokeWidth="1dp"
        app:textEndPadding="12dp"
        app:textStartPadding="12dp" />

</LinearLayout>