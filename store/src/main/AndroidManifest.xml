<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.testpress.store">

    <application
        android:allowBackup="true"
        android:supportsRtl="true" >

        <activity android:name=".ui.ProductsListActivity"
            android:label="@string/testpress_products"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboard|screenSize" />

        <activity android:name=".ui.ProductDetailsActivity"
            android:label="@string/testpress_products"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboard|screenSize" />

        <activity
            android:name=".ui.OrderConfirmActivity"
            android:label="@string/testpress_shipping_address"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".payu.PaymentModeActivity"
            android:theme="@style/TestpressTheme"
            android:label="@string/testpress_payment_method"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".payu.MakePaymentActivity"
            android:theme="@style/TestpressTheme"
            android:label="@string/testpress_complete_payment"
            android:configChanges="keyboardHidden|screenSize" />

        <activity
            android:name=".payu.CreditCardActivity"
            android:theme="@style/TestpressTheme"
            android:label="@string/testpress_enter_details"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity
            android:name=".payu.NetBankingActivity"
            android:theme="@style/TestpressTheme"
            android:label="@string/testpress_select_bank"
            android:configChanges="orientation|keyboardHidden|screenSize" />

    </application>

</manifest>