<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:supportsRtl="true" >

        <activity android:name=".ui.ProductsListActivity"
            android:label="@string/testpress_products"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboard|screenSize" />

        <activity android:name=".ui.ProductDetailsActivity"
            android:label="@string/testpress_products"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboard|screenSize" />

        <activity android:name=".ui.ProductDetailsActivityV2"
            android:label="@string/testpress_products"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboard|screenSize" />

        <activity
            android:name=".ui.OrderConfirmActivity"
            android:label="@string/testpress_shipping_address"
            android:theme="@style/TestpressTheme"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".ui.PaymentSuccessActivity"
            android:theme="@style/TestpressTheme"
            android:label="@string/testpress_payment_status"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".ui.PaymentFailureActivity"
            android:theme="@style/TestpressTheme"
            android:label="Payment Failure"
            android:configChanges="orientation|keyboardHidden|screenSize" />

    </application>

</manifest>